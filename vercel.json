{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "api/**/*.json",
      "use": "@vercel/static",
      "config": {
        "zeroConfig": true
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": ".*", "dest": "/index.html" }
  ],
  "env": {
    "API_BASE_URL": "/api"
  }
}